<div class="uploadcare--preview uploadcare-dialog-padding uploadcare-dialog-preview-root">
  <div class="uploadcare--panel__title uploadcare-dialog-title uploadcare-dialog-preview-title">
    <%- t('dialog.tabs.preview.image.title') %>
  </div>

  <div class="uploadcare-crop-sizes uploadcare-dialog-preview-crop-sizes">
    <div class="uploadcare-crop-size" data-caption="free"><div></div></div>
  </div>

  <div class="uploadcare--preview__image-container uploadcare-dialog-preview-image-wrap"><!--
      1162x684 is 1.5 size of conteiner
      TODO Use picture and srcset for create responsive image
    --><img
      <% if (file) { %>
        src="<%- file.originalUrl %>-/preview/1162x693/-/setfill/efefef/-/format/jpeg/-/progressive/yes/"
        title="<%- (file.name || "") %>"
        alt="<%- (file.name || "") %>"
      <% } else { %>
        src="//:0"
      <% } %>
      class="uploadcare--preview__image uploadcare-dialog-preview-image"
    />
  </div>
</div>

<div class="uploadcare--panel__footer uploadcare-panel-footer">
  <div class="uploadcare--button uploadcare-dialog-button uploadcare-dialog-preview-back"
       tabindex="0" role="button"
          ><%- t('dialog.tabs.preview.image.change') %></div>
  <div class="uploadcare--button uploadcare-dialog-button-success uploadcare-dialog-preview-done"
       tabindex="0" role="button"
          ><%- t('dialog.tabs.preview.done') %></div>
</div>
