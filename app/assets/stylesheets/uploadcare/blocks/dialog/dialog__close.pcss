@import '_config.pcss';

.dialog__close {
	position: absolute;
	top: 0;
	right: 0;
	z-index: calc(var(--z-index) + 1);

	width: 60px;
	height: 60px;

	color: transparent;

	cursor: pointer;

	&:before {
		content: 'âœ–';

		display: block;

		position: absolute;
		top: 20px;
		left: 20px;

		width: 20px;
		height: 20px;

		background: inherit;
		color: #454545;

		font-size: 20px;
		line-height: 20px;

		text-align: center;
	}
}
