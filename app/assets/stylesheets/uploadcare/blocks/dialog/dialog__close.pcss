@import '_config.pcss';

.dialog__close {
  position: absolute;
  top: 0;
  right: 0;
  z-index: calc(var(--z-index) + 1);

  box-sizing: border-box;

  width: 60px;
  height: 60px;

  padding-top: calc((60px - 20px) / 2);

  font-size: 20px;
  line-height: 20px;
  text-align: center;

  color: #454545;

  cursor: pointer;
}
