@import '_config.pcss';

.button {
	display: inline-block;

	width: auto;
	height: 50px;

	margin: 0;
	padding: 0 50px;

	box-sizing: border-box;

	border: none;
	border-radius: 25px;

	background: var(--gray-69);
	color: #fff;

	font-family: var(--font-family);
	font-size: 17px;
	line-height: 50px;
	white-space: nowrap;

	cursor: pointer;

	&:hover, &:focus {
		background-color: var(--gray-93);
	}
}
