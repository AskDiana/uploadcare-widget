@import '_config.pcss';

.camera__video {
  flex: 0 1 auto;

  max-width: 100%;
  max-height: 100%;

  transition: transform .8s cubic-bezier(.23, 1, .32, 1);

  @media (--mobile) and (orientation: landscape) {
    & {
      height: calc(100vh - 200px);
    }
  }

  @media (--desktop) {
    & {
      max-height: 300px;
    }
  }
}
