input[type='range'].input-range {
  display: inline-block;

  width: 100%;
  height: 40px;

  background: transparent;

  &::track {
    height: 4px;

    border-radius: 2px;
    border: none;
    background: #e7e7e7;

    cursor: pointer;
  }

  &::thumb {
    width: 20px;
    height: 20px;

    margin-top: -8px;

    border: none;
    border-radius: 50%;
    background: #fff;
    box-shadow: 0 3px 5px 0 rgba(0, 0, 0, .3);

    cursor: pointer;

    transition: box-shadow .3s, background .3s;

    &:hover, &:focus, &:active {
      box-shadow: 0 3px 7px 0 rgba(0, 0, 0, .5);
    }

    &:focus, &:active {
      background-color: #f6f6f6;
    }
  }
}
