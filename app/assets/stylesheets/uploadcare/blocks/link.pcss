.link {
  &,
  &:link,
  &:visited {
    cursor: pointer;

    color: #157cfc;

    text-decoration: underline;
  }

  &:hover, &:focus {
    color: #2a90ff;

    text-decoration: none;
  }

  &:focus {
    outline: 1px solid color(#157cfc a(80%));
    outline-offset: 1px;
  }

  &:active {
    color: #176dea;
  }
}
