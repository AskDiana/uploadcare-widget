.link {
  &,
  &:link,
  &:visited {
    cursor: pointer;

    color: #3787ec;

    text-decoration: underline;
  }

  &:hover, &:focus {
    color: #34a3ff;

    text-decoration: none;
  }

  &:focus {
    outline: 1px solid color(#3787ec a(80%));
    outline-offset: 1px;
  }

  &:active {
    color: #3274e7;
  }
}
