.footer {
  box-sizing: border-box;

  flex: 0 0 auto;

  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;

  width: 100%;

  margin-top: 10px;
  padding: 10px 20px 20px;

  @media (--mobile) and (orientation: landscape) {
    & {
      flex-wrap: nowrap;
    }
  }

  @media (--desktop) {
    & {
      flex-wrap: nowrap;
    }
  }

  &:empty {
    display: none;
  }
}
