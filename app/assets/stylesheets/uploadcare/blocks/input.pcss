.input {
  appearance: none;

  flex-shrink: 0;

  display: block;

  box-sizing: border-box;

  margin: 10px 0;
  padding: 10px 15px;

  width: 100%;

  font-size: 17.5px;
  line-height: 25px;

  background: #fff;
  color: var(--color-base);
  border: 1px solid var(--color-base-lightest);
  border-radius: 2px;
  box-shadow: none;

  &:focus {
    outline: color(var(--color-primary) a(50%)) 2px solid;
    outline-offset: 1px;
  }

  &::placeholder {
    color: var(--color-base-lightest);
  }
}
