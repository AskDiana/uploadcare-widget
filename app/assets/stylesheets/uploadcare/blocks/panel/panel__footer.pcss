@import '_config.pcss';

.panel__footer {
  box-sizing: border-box;

  flex: 0 0 auto;

  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;

  width: 100%;
  min-height: 60px;

  padding: 20px;

  @media (--desktop) {
    & {
      flex-wrap: nowrap;

      min-height: 100px;
    }
  }

  &:empty {
    display: none;
  }
}
