.widget__button_type_open {
  display: none;

  padding: .5em .8em;

  background: #157cfc;
  color: #fff;

  &:hover, &:focus {
    background: #2a90ff;
  }

  &:active {
    background: #176dea;
  }

  .widget_status_error:not(.widget_option_clearable) &,
  .widget_status_ready & {
    display: inline-block;
  }
}
