.widget__dragndrop-area {
  display: none;

  line-height: 2.6;

  position: absolute;
  top: 50%;
  left: -1em;

  box-sizing: content-box;
  min-width: 100%;
  margin-top: -1.3em;
  padding: 0 1em;

  text-align: center;
  white-space: nowrap;

  border: 1px dashed #157cfc;
  border-radius: 100px;
  background-color: #ececec;
  color: #157cfc;

  .dragging & {
    display: block;
  }
}
