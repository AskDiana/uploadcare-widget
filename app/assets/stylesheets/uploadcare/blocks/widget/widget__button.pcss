.widget__button {
  display: inline-block;

  line-height: 1;

  margin: -1em 0;
  margin-right: .5ex;
  padding: .4em .6em;

  cursor: default;
  white-space: nowrap;

  border-radius: 4px;
  background: #767676;
  color: #fff;

  &:hover, &:focus {
    background: #808080;
  }

  &:active {
    background: #626262;
  }
}
