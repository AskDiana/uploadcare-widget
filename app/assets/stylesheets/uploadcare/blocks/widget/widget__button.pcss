.widget__button {
  display: inline-block;

  line-height: 1;

  margin: -1em 0;
  margin-right: .5ex;
  padding: .4em .6em;

  cursor: default;
  white-space: nowrap;

  border-radius: 4px;
  background: #c3c3c3;
  color: #fff;

  &[disabled],
  &[aria-disabled=true] {
    cursor: not-allowed;
    opacity: .65;
  }

  &:hover, &:focus {
    background: #b3b3b3;
  }

  &:focus {
    outline: var(--focus-outline);
    outline-offset: 1px;
  }
}
