.button_outline-secondary {
  background: #fff;
  border-color: var(--color-base);
  color: var(--color-base);

  &:hover, &:focus {
    background: var(--color-base-light);
    border-color: var(--color-base-light);
    color: #fff;
  }

  &:active {
    background: var(--color-base-dark);
    border-color: var(--color-base-dark);
    color: #fff;
  }
}
