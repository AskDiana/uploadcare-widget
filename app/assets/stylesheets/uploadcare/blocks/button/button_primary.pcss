.button_primary {
  &,
  &:disabled:hover,
  &:disabled:focus,
  &:disabled:active {
    border-color: var(--color-primary);
    background: var(--color-primary);
    color: #fff;
  }

  &:hover, &:focus {
    border-color: var(--color-primary-light);
    background: var(--color-primary-light);
    color: #fff;
  }

  &:active {
    border-color: var(--color-primary-dark);
    background: var(--color-primary-dark);
    color: #fff;
  }
}
