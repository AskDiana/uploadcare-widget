.file__preview {
  flex-shrink: 0;

  display: flex;
  align-items: center;
  justify-content: center;

  box-sizing: border-box;

  width: 50px;
  height: 50px;

  overflow: hidden;

  border-radius: 50%;

  background: #fff;
  color: var(--fill-main-color);
  border: 1px solid;

  transition: color .3s;

  .file__content:hover &,
  .file__content:focus & {
    color: var(--color-primary);
  }

  .file__content:active & {
    color: var(--color-primary-dark);
  }

  .file_error & {
    color: var(--error-color) !important;
  }

  img {
    height: 100%;
  }
}
