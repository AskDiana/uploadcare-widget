.file__preview {
  flex-shrink: 0;

  display: flex;
  align-items: center;
  justify-content: center;

  box-sizing: border-box;

  padding: 2px;
  width: 50px;
  height: 50px;

  overflow: hidden;

  border: 1px solid;
  border-radius: 2px;

  color: var(--back-main-color);

  transition: color .3s, border .3s;
}
