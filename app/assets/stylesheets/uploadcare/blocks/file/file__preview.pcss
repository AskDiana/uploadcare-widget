.file__preview {
  flex-shrink: 0;

  display: flex;
  align-items: center;
  justify-content: center;

  box-sizing: border-box;

  width: 50px;
  height: 50px;

  overflow: hidden;

  border: 1px solid;
  border-radius: 50%;

  background: #fff;

  transition: color .3s;

  img {
    height: 100%;
  }
}
