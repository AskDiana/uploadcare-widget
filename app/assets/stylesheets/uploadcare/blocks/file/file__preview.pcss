.file__preview {
  flex-shrink: 0;

  box-sizing: border-box;

  padding: 2px;

  width: 50px;
  height: 50px;

  overflow: hidden;

  border-radius: 50%;

  background: #fff;
  border: 1px solid #ececec;

  .file:hover &,
  .file:focus & {
    border-color: #3787ec;
  }

  img {
    width: 100%;

    border-radius: 50%;
  }
}
