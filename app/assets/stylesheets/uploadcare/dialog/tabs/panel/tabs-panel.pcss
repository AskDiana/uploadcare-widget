@import 'dialog/_config.pcss';
@import 'file-tab.pcss';
@import 'camera-tab.pcss';
@import 'url-tab';

:root {
	--panel-height: calc(100vh - var(--dialog-header-height));
}

.uploadcare-dialog-tabs-panel {
	display: none;

	min-height: var(--panel-height);

	text-align: center;

	&_current {
		display: block;
	}
}

.uploadcare-dialog-remote-iframe {
	display: block;

	width: 100%;
	height: var(--panel-height);
}
